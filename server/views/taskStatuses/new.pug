extends ../layouts/app.pug

block content
  .row
    .col
    .col-6
      form(method='POST' action='/taskStatuses')
          .form-group
            label Введите название статуса задачи:
            if errors.name
              input.form-control.is-invalid(type='text' name='name')
              .invalid-feedback Пожалуйста, введите верное имя статуса задачи
            else
              input.form-control(type='text' name='name' value=name)
          button.btn.btn-warning.btn-block(type='submit') Добавить статус задачи
    .col