extends ../layouts/app.pug

block content
  .row
    .col
    .col-6
      form(method='POST' action='/taskStatuses')
          .form-group
            label= `${t('views.taskStatuses.new.name')}:`
            if errors.name
              input.form-control.is-invalid(type='text' name='name')
              .invalid-feedback= t('views.taskStatuses.new.error')
            else
              input.form-control(type='text' name='name' value=name)
          button.btn.btn-warning.btn-block(type='submit')= t('views.taskStatuses.new.button')
    .col