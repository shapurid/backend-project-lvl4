extends ../layouts/app.pug

block content
  .row
    .col
    .col-6
      if reply.request.signedIn && reply.request.currentUser.id === +reply.request.params.id
        form(method='POST' action=`/users/${reply.request.currentUser.id}`)
          .form-group
            label= `Имя: '${firstName}'`
            input.form-control(type='text' name='firstName')
          .form-group
            label= `Фамилия: '${lastName}'`
            input.form-control(type='text' name='lastName')
          .form-group
            label= `E-mail: '${email}'`
            input.form-control(type='email' name='email')
          .form-group
            label Новый пароль:
            input.form-control(type='password' name='password' minlength="3")
          input(type="hidden" name="_method" value="patch")
          button.btn.btn-warning.btn-block(type='submit') Изменить профиль

        form(action=`/users/${reply.request.currentUser.id}` method='post').mt-3
          input(type="hidden" name="_method" value="DELETE")
          button.btn.btn-danger.btn-block(type="submit") Удалить профиль
      else
        ul.list-group.list-group-flush
          li.list-group-item= `Имя: ${firstName}`
          li.list-group-item= `Фамилия: ${lastName}`
          li.list-group-item= `E-mail: ${email}`
    .col