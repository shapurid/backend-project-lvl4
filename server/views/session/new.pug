extends ../layouts/app.pug

block content
  .row
    .col
    .col-5
      h3.mb-4= t('views.session.new.signIn')
      form(action=route('createSession') method='post')
        .form-group
          label E-mail:
          input.form-control(type='email' name='email' value=email)
        .form-group
          label Пароль:
          input.form-control(type='password' name='password' minlength="3")
        button.btn.btn-info.btn-block(type='submit')= t('views.session.new.submit')
    .col