extends ../layouts/app.pug

block content
  .row
    .col
    .col-6
      +formFor(action=route('tasksUpdate', { id: reply.request.params.id }) method='post')
        +input(taskForm, 'name', errors)
        +select(taskForm, 'taskStatusId', taskStatuses)
        +select(taskForm, 'executorId', executors)
        +select(taskForm, 'labels', labels, true)
        +textarea(taskForm, 'description')
        +buttonTo(taskForm, 'patch').btn-warning.btn-block
    .col