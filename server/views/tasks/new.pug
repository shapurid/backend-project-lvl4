extends ../layouts/app.pug

block content
  .row
    .col
    .col-6
      +formFor(action=route('tasksCreate') method='post')
        +input(taskForm, 'name', errors)
        +select(taskForm, 'taskStatuses', 'taskStatusId')
        +select(taskForm, 'executors', 'executorId')
        +select(taskForm, 'labels', 'labels', true)
        +textarea(taskForm, 'description')
        +submit(taskForm).bnt-block
    .col